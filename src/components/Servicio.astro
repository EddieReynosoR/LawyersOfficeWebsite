---
import { Image } from "astro:assets";
import ImageTest from "@assets/images/services/service1.webp";

const { id, title, description, class: className } = Astro.props;
---
<div class={`w-[307px] h-min shadow-md m-0 ${className}`}>
    <div class="w-full h-[200px]">
        <Image class="h-full" src={ImageTest} alt="Service Image" />
    </div>
    <div class="pl-4 pr-[1em] h-[215px]">
        <h2 class="font-times text-[1.5em] pt-4">{title}</h2>
        <p class="text-[1em] text-[#515151] text-pretty mt-3">
            {description}
        </p>

        <div class="flex items-center h-[50px]">
            <a class="pl-1 font-times text-primary cursor-pointer" href={`/servicio/${id}`}>Ver m√°s</a>
        </div>
    </div>
</div>