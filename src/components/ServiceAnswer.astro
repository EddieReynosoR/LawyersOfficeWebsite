---
const { title, answer } = Astro.props;
---

<div class="ml-5 mr-5 divider h-full pt-10 flex justify-center">
  <div
    class="mb-20 flex w-full max-w-[1200px] grid-cols-2 min-[1200px]:justify-evenly max-[1200px]:flex-col max-[1200px]:items-center gap-10"
  >
    <h1 class="service-section-title title mb-10">{title}</h1>
    <p class="service-section-text max-[1200px]:w-[50%] w-[70%] text-pretty">{answer}</p>
  </div>
</div>

<style>
  .divider {
    border-top: 3px;
    border-bottom: 3px;
    border-style: solid;
    border-color: #d4d4d4;
  }

  .service-section-title {
    font-size: clamp(2em, 2vw, 5em);
  }

  .service-section-text {
    font-size: clamp(0.8em, 1.2vw, 1.2em);
  }
</style>
