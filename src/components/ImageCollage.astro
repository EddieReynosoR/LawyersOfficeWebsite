---
import { Image } from "astro:assets";
import Image1 from "@assets/images/law-firm.webp";
import Image2 from "@assets/images/lawyers/lawyer-image.webp";
import Image3 from "@assets/images/services/service1.webp";
---

<div class="collage flex flex-col md:grid grid-cols-2 row-template h-full gap-2">
    <Image class="col-start-1 row-start-2 row-end-12 object-cover h-full" src={Image1} alt="Image Collage" />
    <Image class="col-start-2 row-start-1 row-end-7 object-cover h-full" src={Image2} alt="Image Collage" />
    <Image class="col-start-2 row-start-7 row-end-14 object-cover h-full" src={Image3} alt="Image Collage" />
</div>

<style>
    .row-template {
        grid-template-rows: repeat(20, minmax(0, 1fr));
    }
    .row-end-14 {
        grid-row-end: 14;
    }

    @media screen and (max-width: 768px) {
        .collage {
            align-items: center;
            width: 100%;
        }
        .collage img {
            width: 70%;
            object-fit: cover;
            max-width: 400px;
        }
    }
</style>                                                                            