---
import Button1 from "@/components/ui/Button1.astro";
const {title, description, icon: Icon, buttonText, class: className} = Astro.props;
---
<div class={`border-solid border-2 border-[#dbdbdb] rounded-lg p-4 w-[300px] h-fit flex flex-col ${className}`}>
    <div class="relative h-[70px] w-[70px] bg-third rounded-md flex-initial mb-8">
        <div class="flex justify-center h-full items-center">
            <Icon class:list={["absolute h-[50px] w-[50px]"]} />
        </div>
    </div>
    <div class="h-full flex-auto">
        <div class="mb-20">
            <h1 class="font-times text-[1.7em]">{title}</h1>
            <p class="text-[#515151] text-pretty min-h-[72px]">{description}</p>
        </div>
        <Button1 class:list={["Call !w-[180px] !h-[58px] !text-[1.2em]"]} text={buttonText} />
    </div>
</div>