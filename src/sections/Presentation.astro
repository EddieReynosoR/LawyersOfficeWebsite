---
import { Image } from "astro:assets";
import ladyJusticeImage from "@assets/images/lady-justice.webp";

import Button1 from "@components/ui/Button1.astro";
import Button2 from "@components/ui/Button2.astro";
---

<header class="background h-full min-h-[1080px] object-cover bg-no-repeat bg-cover bg-fixed flex justify-center items-center overflow-hidden relative">
    <div class="title h-[70vh] flex gap-x-0 gap-y-0 items-center max-w-screen-xl">
        <div class="w-full min-w-[18em]">
            <div class="flex flex-col justify-center">
                <h1 class="font-light select-none mb-[0.6em] mt-0 text-center">DESPACHO JUR√çDICO ROMERO'S & ASOCIADOS</h1>
        
                <p class="text-[20px] w-[90%]">Lorem ipsum dolor sit amet, consectetur adipiscing elit. In dignissim suscipit dolor eget volutpat. Cras libero urna, ultrices at mattis.</p>
            </div>

            <div class="buttons-container flex justify-center mt-[5em]">
                <div class="flex gap-[2em]">
                    <Button1 />
                    <Button2 />
                </div>
            </div>
        </div>
        <div class="flex items-center justify-center w-[30%]">
            <Image class="lady-justice select-none w-[14.5em]" src={ladyJusticeImage} alt="Lady Justice" width={250} height={550}/>
        </div>
    </div>
</header>

<style>
	.background {
		background-image: linear-gradient(180deg, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.8)), url("../assets/images/main-page-image.webp");
	}

	.title div h1{
		font-family: "Perpetua Titling MT", sans-serif;
        color: var(--main-color);
		font-size: clamp(2.5em, 7vw, 4.2em);
	}

	.title div p {
		margin: 0 auto 1em auto;
	}

	.lady-justice {
		image-rendering: auto;
		image-rendering: -moz-crisp-edges;          /* Firefox */
		image-rendering: -o-crisp-edges;            /* Opera */
		image-rendering: -webkit-optimize-contrast; /* Webkit (non-standard naming)*/
		-ms-interpolation-mode: nearest-neighbor;   /* IE (non-standard property) */
	}

	@media screen and (max-width: 991px){
		.background .title{
			flex-direction: column-reverse;
			width: 90%;
		}
	}

	@media screen and (max-width: 767px) {
		.lady-justice {
			width: 9em;
			height: 25em;
		}

		.buttons-container div{
			flex-direction: column;
		}
	}

	@media screen and (max-width: 479px) {
		.lady-justice {
			width: 7.8em;
			height: 24em;
		}
	}
</style>